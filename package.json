{
  "name": "heroku-nextjs",
  "version": "1.0.0",
  "description": "Deploy Next.js server-side React apps to Heroku",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node .next/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mars/heroku-nextjs.git"
  },
  "engines": {
    "node": "8.11.3"
  },
  "keywords": [
    "react",
    "ssr",
    "server-side-rendering"
  ],
  "dependencies": {
    "next": "^8.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/next": "^8.0.1",
    "@types/react": "^16.8.8",
    "@zeit/next-typescript": "^1.1.1",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  }
}
